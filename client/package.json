{
  "name": "textX",
  "displayName": "textX",
  "description": "VS Code extension for domain specific languages based on textX",
  "license": "MIT",
  "version": "0.2.0",
  "publisher": "textX",
  "icon": "media/textX-logo.png",
  "author": {
    "email": "danixeee@gmail.com",
    "name": "Daniel Elero"
  },
  "repository": "https://github.com/textX/textX-LS",
  "bugs": {
    "url": "https://github.com/textX/textX-LS/issues"
  },
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages",
    "Formatters",
    "Snippets",
    "Themes",
    "Linters"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "textx.installProject",
        "title": "Install textX project",
        "icon": {
          "light": "resources/light/add.svg",
          "dark": "resources/dark/add.svg"
        },
        "category": "textX"
      },
      {
        "command": "textx.installProjectEditable",
        "title": "Install textX project",
        "icon": {
          "light": "resources/light/add.svg",
          "dark": "resources/dark/add.svg"
        },
        "category": "textX"
      },
      {
        "command": "textx.uninstallProject",
        "title": "Uninstall textX project",
        "icon": {
          "light": "resources/light/bin.svg",
          "dark": "resources/dark/bin.svg"
        },
        "category": "textX"
      },
      {
        "command": "textx.refreshProjects",
        "title": "Refresh textX projects",
        "icon": {
          "light": "resources/light/refresh.svg",
          "dark": "resources/dark/refresh.svg"
        },
        "category": "textX"
      },
      {
        "command": "textx.scaffoldProject",
        "title": "Scaffold textX project",
        "icon": {
          "light": "resources/light/thunder.svg",
          "dark": "resources/dark/thunder.svg"
        },
        "category": "textX"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "textX configuration options",
      "properties": {
        "textx.showExplorer": {
          "type": "boolean",
          "default": true,
          "description": "Show or hide the textX Explorer"
        }
      }
    },
    "grammars": [
      {
        "language": "textx",
        "scopeName": "source.textx",
        "path": "./syntaxes/textx.json"
      },
      {
        "language": "textxfile",
        "scopeName": "source.textxfile",
        "path": "./syntaxes/textxfile.json"
      }
    ],
    "languages": [
      {
        "id": "textxfile",
        "aliases": [
          "Textxfile"
        ],
        "filenamePatterns": [
          "*.textxfile",
          "Textxfile"
        ]
      },
      {
        "id": "textx",
        "aliases": [
          "textX"
        ],
        "extensions": [
          ".tx"
        ]
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "textx.installProjectEditable",
          "group": "textX@1",
          "when": "resourceLangId == python && resourceFilename == setup.py"
        },
        {
          "command": "textx.installProjectEditable",
          "group": "textX@1",
          "when": "explorerResourceIsFolder"
        },
        {
          "command": "textx.uninstallProject",
          "group": "textX@2",
          "when": "resourceLangId == python && resourceFilename == setup.py"
        },
        {
          "command": "textx.uninstallProject",
          "group": "textX@2",
          "when": "explorerResourceIsFolder"
        }
      ],
      "view/title": [
        {
          "command": "textx.installProject",
          "when": "view == textxLanguages",
          "group": "navigation@1"
        },
        {
          "command": "textx.refreshProjects",
          "when": "view == textxLanguages",
          "group": "navigation@2"
        }
      ],
      "view/item/context": [
        {
          "command": "textx.uninstallProject",
          "when": "view == textxLanguages && viewItem == project",
          "group": "inline"
        }
      ]
    },
    "snippets": [
      {
        "language": "textxfile",
        "path": "./snippets/textxfile.json"
      }
    ],
    "views": {
      "textxView": [
        {
          "id": "textxLanguages",
          "name": "Languages",
          "when": "config.textx.showExplorer == true"
        },
        {
          "id": "textxGenerators",
          "name": "Generators",
          "when": "config.textx.showExplorer == true"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "icon": "media/textX-menu.svg",
          "id": "textxView",
          "title": "textX"
        }
      ]
    }
  },
  "scripts": {
    "postinstall": "npm --prefix libs install @vscode/vsce",
    "vscode:prepublish": "npm run package && chmod +x ./bin/copy-wheels.sh && sh ./bin/copy-wheels.sh && npm --prefix libs install @vscode/vsce",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.75.0",
    "@typescript-eslint/eslint-plugin": "^7.11.0",
    "@typescript-eslint/parser": "^7.11.0",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0",
    "esbuild": "^0.21.4",
    "eslint": "^8.57.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "inversify": "^6.0.2",
    "reflect-metadata": "^0.2.2",
    "strip-json-comments": "^5.0.1",
    "true-case-path": "^2.2.1",
    "vscode-languageclient": "^9.0.1"
  }
}
