{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "textx",
  "scopeName": "source.textx",
  "fileTypes": [
    ".tx"
  ],
  "patterns": [
    {
      "include": "#comment"
    },
    {
      "include": "#string"
    },
    {
      "include": "#number"
    },
    {
      "include": "#language_keyword"
    },
    {
      "include": "#language_operation"
    },
    {
      "include": "#regular_expression"
    }
  ],
  "repository": {
    "comment": {
      "patterns": [
        {
          "name": "comment.line",
          "match": "//.*$"
        },
        {
          "name": "comment.block",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "string": {
      "patterns": [
        {
          "name": "string.quoted.single",
          "begin": "'",
          "end": "'"
        },
        {
          "name": "string.quoted.double",
          "begin": "\"",
          "end": "\""
        }
      ]
    },
    "number": {
      "patterns": [
        {
          "name": "constant.numeric",
          "match": "[0-9.]+"
        }
      ]
    },
    "language_keyword": {
      "patterns": [
        {
          "name": "keyword.control",
          "match": "(import(:|;|\\[|,|\\]|=|\\||-|\\(|\\)|\\*|\\?|\\+|#|!|&|\\*=|\\+=|\\?=|/)*$|import(:|;|\\[|,|\\]|=|\\||-|\\(|\\)|\\*|\\?|\\+|#|!|&|\\*=|\\+=|\\?=|/)* |eolterm(:|;|\\[|,|\\]|=|\\||-|\\(|\\)|\\*|\\?|\\+|#|!|&|\\*=|\\+=|\\?=|/)*$|eolterm(:|;|\\[|,|\\]|=|\\||-|\\(|\\)|\\*|\\?|\\+|#|!|&|\\*=|\\+=|\\?=|/)* |ID(:|;|\\[|,|\\]|=|\\||-|\\(|\\)|\\*|\\?|\\+|#|!|&|\\*=|\\+=|\\?=|/)*$|ID(:|;|\\[|,|\\]|=|\\||-|\\(|\\)|\\*|\\?|\\+|#|!|&|\\*=|\\+=|\\?=|/)* |BOOL(:|;|\\[|,|\\]|=|\\||-|\\(|\\)|\\*|\\?|\\+|#|!|&|\\*=|\\+=|\\?=|/)*$|BOOL(:|;|\\[|,|\\]|=|\\||-|\\(|\\)|\\*|\\?|\\+|#|!|&|\\*=|\\+=|\\?=|/)* |INT(:|;|\\[|,|\\]|=|\\||-|\\(|\\)|\\*|\\?|\\+|#|!|&|\\*=|\\+=|\\?=|/)*$|INT(:|;|\\[|,|\\]|=|\\||-|\\(|\\)|\\*|\\?|\\+|#|!|&|\\*=|\\+=|\\?=|/)* |FLOAT(:|;|\\[|,|\\]|=|\\||-|\\(|\\)|\\*|\\?|\\+|#|!|&|\\*=|\\+=|\\?=|/)*$|FLOAT(:|;|\\[|,|\\]|=|\\||-|\\(|\\)|\\*|\\?|\\+|#|!|&|\\*=|\\+=|\\?=|/)* |STRING(:|;|\\[|,|\\]|=|\\||-|\\(|\\)|\\*|\\?|\\+|#|!|&|\\*=|\\+=|\\?=|/)*$|STRING(:|;|\\[|,|\\]|=|\\||-|\\(|\\)|\\*|\\?|\\+|#|!|&|\\*=|\\+=|\\?=|/)* |NUMBER(:|;|\\[|,|\\]|=|\\||-|\\(|\\)|\\*|\\?|\\+|#|!|&|\\*=|\\+=|\\?=|/)*$|NUMBER(:|;|\\[|,|\\]|=|\\||-|\\(|\\)|\\*|\\?|\\+|#|!|&|\\*=|\\+=|\\?=|/)* |BASETYPE(:|;|\\[|,|\\]|=|\\||-|\\(|\\)|\\*|\\?|\\+|#|!|&|\\*=|\\+=|\\?=|/)*$|BASETYPE(:|;|\\[|,|\\]|=|\\||-|\\(|\\)|\\*|\\?|\\+|#|!|&|\\*=|\\+=|\\?=|/)* )",
          "captures": {
            "1": {
              "patterns": [
                {
                  "name": "keyword.operator.new",
                  "match": "(:|;|\\[|,|\\]|=|\\||-|\\(|\\)|\\*|\\?|\\+|#|!|&|\\*=|\\+=|\\?=|/)"
                }
              ]
            }
          }
        }
      ]
    },
    "language_operation": {
      "patterns": [
        {
          "name": "keyword.operator.new",
          "match": "(:|;|\\[|,|\\]|=|\\||-|\\(|\\)|\\*|\\?|\\+|#|!|&|\\*=|\\+=|\\?=|/)"
        }
      ]
    },
    "regular_expression": {
      "patterns": [
        {
          "name": "entity.name.class",
          "match": "(\\w+:(:|;|\\[|,|\\]|=|\\||-|\\(|\\)|\\*|\\?|\\+|#|!|&|\\*=|\\+=|\\?=|/)*$|\\w+:(:|;|\\[|,|\\]|=|\\||-|\\(|\\)|\\*|\\?|\\+|#|!|&|\\*=|\\+=|\\?=|/)* |\\w+:(:|;|\\[|,|\\]|=|\\||-|\\(|\\)|\\*|\\?|\\+|#|!|&|\\*=|\\+=|\\?=|/)*$|\\w+:(:|;|\\[|,|\\]|=|\\||-|\\(|\\)|\\*|\\?|\\+|#|!|&|\\*=|\\+=|\\?=|/)* )",
          "captures": {
            "1": {
              "patterns": [
                {
                  "name": "keyword.operator.new",
                  "match": "(:|;|\\[|,|\\]|=|\\||-|\\(|\\)|\\*|\\?|\\+|#|!|&|\\*=|\\+=|\\?=|/)"
                }
              ]
            }
          }
        }
      ]
    }
  }
}
